{
  "name": "casper-node-launcher-js",
  "version": "0.0.3",
  "description": "CLI makes easy to run single casper node for test purpose",
  "author": "Ryo Kanazawa <ryo@casperlabs.io>",
  "bin": {
    "casper-node-launcher-js": "./bin/run"
  },
  "homepage": "https://github.com/casper-network/casper-node-launcher-js",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "casper-network/casper-node-launcher-js",
  "files": [
    "/bin",
    "/dist",
    "/assets",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^3.22",
    "@oclif/plugin-help": "^6.0.15",
    "@oclif/plugin-plugins": "^4.3.1",
    "axios": "^1.6.7",
    "chokidar": "^3.6.0",
    "envsub": "^4.1.0",
    "kleur": "^4.1.5",
    "node-fetch": "^2.6.11",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@oclif/test": "^3.2.1",
    "@types/chai": "^4.3.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
    "@types/node-fetch": "^2.6.11",
    "@types/shelljs": "^0.8.15",
    "chai": "^4.3.12",
    "eslint": "^8.57.0",
    "eslint-config-oclif": "^5.0.4",
    "eslint-config-oclif-typescript": "^3.0.48",
    "eslint-plugin-perfectionist": "^2.6.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "mocha": "^10.3.0",
    "oclif": "^4.5.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "oclif": {
    "bin": "casper-node-launcher-js",
    "dirname": "casper-node-launcher-js",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " "
  },
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "npm run clean && tsc",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only './src/test/**/*.test.ts'",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/casper-network/casper-node-launcher-js/issues",
  "keywords": [
    "oclif",
    "casper",
    "casper node",
    "NCTL"
  ],
  "types": "dist/index.d.ts"
}
